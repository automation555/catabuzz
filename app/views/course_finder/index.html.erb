<h2>Search</h2>
<br />


<% form_tag('', :method=>:get) do -%>
<%= text_field_tag('q', '', :size => 30) %>
<%= submit_tag 'Search', :name=> nil %>
<% end -%>

<table border="0">
	<tr>
		<td /> <td />
	</tr>
<% unless @results.nil? %>
	<% for result in @results %>
	
		<tr>
			<td><%= result.course.name %></td>
			<td><%= result.ferret_score %></td>
		</tr>
	
	<% end %>

<% end %>

</table>

